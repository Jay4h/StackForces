{
  "name": "bharat-id",
  "version": "1.0.0",
  "description": "Self-Sovereign Identity System for India",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "cpp-engine"
  ],
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../cpp-engine && npm install",
    "build:cpp": "cd cpp-engine && npm run build",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "start:infra": "docker-compose up -d",
    "stop:infra": "docker-compose down",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "npm run build:cpp && cd backend && npm run build && cd ../frontend && npm run build"
  },
  "keywords": [
    "identity",
    "ssi",
    "webauthn",
    "biometric",
    "india"
  ],
  "author": "Bharat-ID Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
